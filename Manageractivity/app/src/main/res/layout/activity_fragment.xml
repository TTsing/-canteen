<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fragment"
    android:layout_width="match_parent"
    android:background="@color/colorgreen"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a10916.manageractivity.fragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:layout_height="0dp"
        android:id="@+id/lokatsee">

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorwhite"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/xiahuakuang1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/mneu1"
                    android:id="@+id/todayimage"
                    />

                <TextView
                    android:text="今日"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/todaytext"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/xiahuakuang2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/mneu3"
                    android:id="@+id/inlineimage"
                    />

                <TextView
                    android:text="排队"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inlinetext"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/xiahuakuang3">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/mneu2"
                    android:id="@+id/Mineimage"
                    />

                <TextView
                    android:text="我的"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Minetext"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
